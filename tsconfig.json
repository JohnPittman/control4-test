{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "moduleResolution": "node",
        "allowJs": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "pretty": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "typeRoots": ["node_modules/@types"]
    }
}
